{
  "spellright.language": [
    "en",
    "pt"
  ],
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext"
  ],
  "spellright.ignoreFiles": [
    "**/.gitignore",
    "**/.spellignore",
    "**/.tool-versions",
  ],
  "foam.files.ignore": [
    "node_modules/**/*"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact"
  ],
  "prettier.documentSelectors": ["**/*.astro"]
}